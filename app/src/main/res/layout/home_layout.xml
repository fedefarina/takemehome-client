<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:uber="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <ImageButton

                android:src="@mipmap/mapa"
                android:id="@+id/mapa"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:scaleType="centerCrop"
                android:layout_height="120dp"
                android:padding="10dp"
                android:background="#00000000"/>

            <ImageButton
                android:src="@mipmap/emergency"
                android:id="@+id/emergency_call"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:scaleType="centerCrop"
                android:layout_height="120dp"
                android:padding="10dp"
                android:background="#00000000"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:src="@mipmap/favorite_call"
                android:id="@+id/favorite_call"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:scaleType="centerCrop"
                android:layout_height="120dp"
                android:padding="10dp"
                android:background="#00000000"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <com.uber.sdk.android.rides.RideRequestButton
                    android:id="@+id/uber_btn"
                    android:layout_width="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_height="90dp"
                    uber:ub__style="white"/>

                <ImageView
                    android:src="@mipmap/uber_logo"
                    android:id="@+id/imageButton5"
                    android:layout_width="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_height="120dp"
                    android:padding="10dp"
                    android:background="#00000000"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>